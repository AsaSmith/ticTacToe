extends ./layout.jade

block title
  title Login 
  
block content
  h1 Login for TicTacToe
  
  form(name="register", action="login", method="post")
        .form-group
          label Username
          input.form-control(type="text", name="user_name")
        .form-group
          label Password
          input.form-control(type="password", name="password")
        button.btn.btn-default(type="submit") Login
